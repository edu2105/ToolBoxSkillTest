<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="TypeTextStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/poster_title_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="CarouselTitleTextStyle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/carousel_type_title_size</item>
        <item name="android:textColor">@color/colorCarouselTypeTitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

</resources>
